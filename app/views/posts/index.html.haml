- if logged_in?
	#posts.transitions-enabled
		- @posts.each do |post|
			.box.panel.panel-default
				= link_to (image_tag post.image.url(:medium)), post
				.panel-body	
					%h2= link_to post.title, post
					%p
					Created by:
					= post.user.username
					%i.fa.fa-comment
					= post.comments.count