= image_tag @post.image.url(:medium)
%h1= @post.title
%p= @post.description
%p 
	Created by:
	= image_tag @post.user.user_image.url(:small)
	= @post.user.username
	%br
	Created at:
	= @post.date_published

%h2= pluralize(@comments.count, "Comment")
- @comments.each do |comment|
	= image_tag current_user.user_image.url(:small)
	= comment.user.username
	%p= comment.body

= render "comments/form"

= link_to "Like", upvote_path, class: "btn btn-primary fa fa-thumbs-o-up"
%p= @post.upvotes

= link_to "Back", posts_path

- if @post.user.username == current_user.username
	= link_to "Edit", edit_post_path
	= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure" }



